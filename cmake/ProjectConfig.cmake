	set(FSM_OUTPUT_DIR ${PROJECT_SOURCE_DIR}/bin/debug-${SYSTEM_NAME})
    set(FSM_COMPILE_DEFINITIONS ${FSM_COMPILE_DEFINITIONS} -DDEBUG)
else()
	set(FSM_OUTPUT_DIR ${PROJECT_SOURCE_DIR}/bin/release-${SYSTEM_NAME})
	set(FSM_COMPILE_DEFINITIONS ${FSM_COMPILE_DEFINITIONS} -DNDEBUG)
